<% provide :title, t("views.users.edit.profile") %>
<div class="bradcam_area bradcam_bg_2">
  <div class="container">
    <div class="row">
      <div class="col-xl-12">
        <div class="bradcam_text text-center">
          <h3></h3>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="contact-section section_padding">
  <div class="container">
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <h2><%= t "views.users.edit.profile" %></h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label t("views.users.edit.name") %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t("views.users.edit.birthday") %><br />
          <%= f.date_field :birthday, autofocus: true, autocomplete: "birthday", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t("views.users.edit.sex") %><br>
          <%= f.label :sex, t("views.users.edit.male"), :value => 1  %>
          <%= f.radio_button :sex, 1 %>
          <%= f.label :sex, t("views.users.edit.female"), :value => 2  %>
          <%= f.radio_button :sex, 2 %>
        </div>

        <div class="field">
          <%= f.label t("views.users.edit.email") %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t("views.users.edit.phone") %><br />
          <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t("views.users.edit.address") %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t("views.users.edit.waiting") %> for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label t("views.users.edit.pass") %> <i><%= t("views.users.edit.dont_change") %></i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label t("views.users.edit.password_confirmation") %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t("views.users.edit.current_password") %> <i><%= t("views.users.edit.need_current") %></i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit t("views.users.edit.update"), class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>