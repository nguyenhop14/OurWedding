<% provide :title, t("static_pages.about.about_us") %>
<!-- bradcam_area  -->
<div class="bradcam_area bradcam_bg_2">
  <div class="container">
    <div class="row">
      <div class="col-xl-12">
        <div class="bradcam_text text-center">
          <h3><%= t "static_pages.about.about_us" %></h3>
        </div>
      </div>
    </div>
  </div>
</div>
<!--/ bradcam_area  -->

<!-- about_mission  -->
<div class="about_mission">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-xl-6 col-md-6">
        <div class="about_thumb">
          <%= image_tag src="about/about_big.png" %>
          <div class="small_img_1">
            <%= image_tag src="about/small_2.png" %>
          </div>
          <div class="small_img_2">
            <%= image_tag src="about/small_1.png" %>
          </div>
        </div>
      </div>
      <div class="col-xl-6 col-md-6">
        <div class="about_text">
          <h4>Our Mission</h4>
          <p>There are many variations of passages of Lorem Ipsum available, but the majority have
            suffered alteration in some form, by injected humour, or randomised words which don't look
            even slightly believable. If you are going to use a passage of Lorem Ipsum, you need to be
            sure there isn't anything embarrassing.</p>
        </div>
      </div>
    </div>
  </div>
</div>
<!--/ about_mission -->

<!-- counter_area  -->
<div class="counter_area">
  <div class="container">
    <div class="border_bottom">
      <div class="row">
        <div class="col-xl-4 col-md-4">
