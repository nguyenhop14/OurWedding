<header>
  <div class="header-area ">
    <div id="sticky-header" class="main-header-area">
      <div class="container-fluid ">
        <div class="header_bottom_border">
          <div class="row align-items-center">
            <div class="col-xl-3 col-lg-2">
              <div class="logo">
                <a href="index.html">
                  <%= image_tag  src="logo.png" %>
                </a>
              </div>
            </div>
            <div class="col-xl-6 col-lg-7">
              <div class="main-menu  d-none d-lg-block">
                <nav>
                  <ul id="navigation">
                    <li><%= link_to t("layouts.header.home"), root_path %></li>
                    <li><%= link_to t("layouts.header.service"), "#" %> <i class="ti-angle-down"></i>
                      <ul class="submenu">
                        <li><a href="elements.html"></a></li>
                        <li><a href="single_listings.html"></a></li>
                      </ul>
                    </li>
                    <li><%= link_to t("layouts.header.news"), "#" %></li>
                    <li><%= link_to t("layouts.header.plan"), "#" %></li>
                    <li><%= link_to t("layouts.header.about"), about_path %></li>
                    <% if user_signed_in? %>
                      <li><%= link_to current_user.name, edit_user_registration_path %>
                        <ul class="submenu">
                          <li><%= link_to "Profile", edit_user_registration_path %></li>
                          <li><%= link_to "Log out", destroy_user_session_path, method: :delete  %></li>
                        </ul>
                      </li>
                    <% end %>
                  </ul>
                </nav>
              </div>
            </div>
              <div class="col-xl-3 col-lg-3 d-none d-lg-block">
              <div class="Appointment">
                <div class="book_btn d-none d-lg-block">
                  <% if user_signed_in? == false %>
                    <%= link_to t("layouts.header.sign_up"), new_user_session_path %>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="col-12">
              <div class="mobile_menu d-block d-lg-none"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- header-end -->
